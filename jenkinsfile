pipeline {
    agent any
    environment {
        NPM_GLOBAL = "/var/lib/jenkins/npm-global"  // Custom path for global npm packages
    }

    stages {
        stage('Checkout Code') {
            steps {
                script {
                    checkout([$class: 'GitSCM',
                        branches: [[name: '*/backend']], 
                        userRemoteConfigs: [[
                            url: 'https://github.com/TaherBenIsmail/EmergencyDepartment.git',
                            credentialsId: 'anasjraidi'
                        ]],
                        extensions: [[$class: 'CloneOption', depth: 1]]
                    ])
                }
            }
        }

        stage('Install dependencies') {
            steps {
                script {
                    sh 'npm install'
                }
            }
        }

        stage('Install nodemon globally') {
            steps {
                script {
                    // Ensure npm is configured with the correct prefix
                    sh '''
                    npm config set prefix $NPM_GLOBAL
                    export PATH=$NPM_GLOBAL/bin:$PATH
                    npm install -g nodemon --unsafe-perm=true
                    '''
                }
            }
        }

        stage('Unit Test') {
            when {
                expression { false }  // Skip this stage for now
            }
            steps {
                script {
                    sh 'npx mocha'
                }
            }
        }

        stage('Build application') {
            steps {
                script {
                    sh 'nodemon server.js'
                }
            }
        }
    }

    post {
        always {
            echo 'This will always run, even if the build fails.'
        }
    }
}

pipeline {
    agent any
    environment {
        NPM_GLOBAL = "$HOME/npm-global" // or use /var/lib/jenkins/npm-global if preferred
    }

    stages {
        stage('Checkout Code') {
            steps {
                script {
                    checkout([$class: 'GitSCM',
                        branches: [[name: '*/backend']], 
                        userRemoteConfigs: [[
                            url: 'https://github.com/TaherBenIsmail/EmergencyDepartment.git',
                            credentialsId: 'anasjraidi'
                        ]],
                        extensions: [[$class: 'CloneOption', depth: 1]]
                    ])
                }
            }
        }

        stage('Install dependencies') {
            steps {
                script {
                    sh 'npm install'
                }
            }
        }

        stage('Install nodemon globally') {
            steps {
                script {
                    sh 'npm config set prefix $NPM_GLOBAL' // set npm global directory
                    sh 'export PATH=$PATH:$NPM_GLOBAL/bin' // update PATH
                    sh 'npm install -g nodemon' // install nodemon globally
                }
            }
        }

        stage('Unit Test') {
            when {
                expression { false }  // Skip this stage for now
            }
            steps {
                script {
                    sh 'npx mocha'
                }
            }
        }

        stage('Build application') {
            steps {
                script {
                    sh 'nodemon server.js'
                }
            }
        }
    }

    post {
        always {
            // This block will always run, regardless of success or failure
            echo 'This will always run, even if the build fails.'
        }
    }
}

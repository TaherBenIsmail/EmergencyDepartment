pipeline {
    agent any
    environment {
        // Ensure the npm global path is added to the system's PATH
        NPM_GLOBAL = "$HOME/npm-global"
    }

    stages {
        stage('Checkout Code') {
            steps {
                script {
                    checkout([$class: 'GitSCM',
                        branches: [[name: '*/backend']], 
                        userRemoteConfigs: [[
                            url: 'https://github.com/TaherBenIsmail/EmergencyDepartment.git',
                            credentialsId: 'anasjraidi'
                        ]],
                        extensions: [[$class: 'CloneOption', depth: 1]]
                    ])
                }
            }
        }

        stage('Install dependencies') {
            steps {
                script {
                    sh 'npm install'
                }
            }
        }

        stage('Install nodemon globally') {
            steps {
                script {
                    // Configure npm to use a custom directory for global packages
                    sh 'npm config set prefix $NPM_GLOBAL'

                    // Update PATH to include the new directory for global npm packages
                    sh 'export PATH=$PATH:$NPM_GLOBAL/bin'
                    
                    // Install nodemon globally in the custom directory
                    sh 'npm install -g nodemon'
                }
            }
        }

        stage('Unit Test') {
            when {
                expression { false }  // You can adjust the condition here to skip based on your needs
            }
            steps {
                script {
                    sh 'npx mocha'
                }
            }
        }

        stage('Build application') {
            steps {
                script {
                    sh 'nodemon server.js'
                }
            }
        }
    }

    post {
        always {
            // Optional: Clean up npm-global directory
            // sh 'rm -rf $NPM_GLOBAL'
        }
    }
}

pipeline {
    agent any
    environment {
        NPM_GLOBAL = "$HOME/npm-global"
    }

    stages {
        stage('Checkout Code') {
            steps {
                script {
                    checkout([$class: 'GitSCM',
                        branches: [[name: '*/backend']], 
                        userRemoteConfigs: [[
                            url: 'https://github.com/TaherBenIsmail/EmergencyDepartment.git',
                            credentialsId: 'anasjraidi'
                        ]],
                        extensions: [[$class: 'CloneOption', depth: 1]]
                    ])
                }
            }
        }

        stage('Install dependencies') {
            steps {
                script {
                    sh 'npm install'
                }
            }
        }

        stage('Install nodemon globally') {
            steps {
                script {
                    sh 'npm config set prefix $NPM_GLOBAL'
                    sh 'export PATH=$PATH:$NPM_GLOBAL/bin'
                    sh 'npm install -g nodemon'
                }
            }
        }

        stage('Unit Test') {
            when {
                expression { false }
            }
            steps {
                script {
                    sh 'npx mocha'
                }
            }
        }

        stage('Build application') {
            steps {
                script {
                    sh 'nodemon server.js'
                }
            }
        }
    }

    post {
        always {
            // Always run this cleanup or logging step after pipeline execution
            echo 'This will always run, even if the build fails.'
            // Example: Clean up npm global directory or other necessary tasks
            // sh 'rm -rf $NPM_GLOBAL'
        }
    }
}

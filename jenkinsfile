pipeline {
    agent any

    stages {
        stage('Checkout Code') { 
            steps {
                script {
                    checkout([$class: 'GitSCM',
                        branches: [[name: '*/backend']], 
                        userRemoteConfigs: [[
                            url: 'https://github.com/TaherBenIsmail/EmergencyDepartment.git',
                            credentialsId: 'anasjraidi' 
                        ]],
                        extensions: [[$class: 'CloneOption', depth: 1]] 
                    ])
                }
            }
        }

        stage('Install dependencies') {
            steps {
                script {
                    sh 'npm install'
                    sh 'npm install -g nodemon' // Install nodemon globally
                }
            }
        }

        stage('Unit Test') {
            when {
                expression {
                    return fileExists('test') || fileExists('test/**/*.js')  // Check if any test folder or files exist
                }
            }
            steps {
                script {
                    sh 'npx mocha'
                }
            }
        }

        stage('Build application') {
            steps {
                script {
                    sh 'nodemon server.js'
                }
            }
        }
    }
}

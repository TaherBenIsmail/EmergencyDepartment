pipeline {
    agent any
    stages {
        stage('Checkout Code') {
            steps {
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: '*/backend']],
                    extensions: [],
                    userRemoteConfigs: [[
                        url: 'https://github.com/TaherBenIsmail/EmergencyDepartment.git',
                        credentialsId: 'github-pat' // Use the credential ID here
                    ]]
                ])
            }
        }
        stage('Install dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Unit Test') {
            steps {
                sh 'npm test'
            }
        }
        stage('Build application') {
            steps {
                sh 'npm run build'
            }
        }
    }
}
